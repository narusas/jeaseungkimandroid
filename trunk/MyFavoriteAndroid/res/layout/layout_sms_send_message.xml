<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_sms_send_message_guide1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="받는사람의 폰번호를 입력하세요."
        android:textSize="14dp" >
    </TextView>

    <EditText
        android:id="@+id/edit_sms_send_message_phone_number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:phoneNumber="true"
        android:textSize="20sp" >
    </EditText>

    <TextView
        android:id="@+id/txt_sms_send_message_guide2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="메시지 입력"
        android:textSize="14sp" >
    </TextView>

    <EditText
        android:id="@+id/edit_sms_send_message_content"
        android:layout_width="fill_parent"
        android:layout_height="150px"
        android:gravity="top" >
    </EditText>

    <Button
        android:id="@+id/btn_sms_send_message_send_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="전송" >
    </Button>
    <Button
        android:id="@+id/btn_sms_send_message_send_monitor_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="전송(모니터링)" >
    </Button>

</LinearLayout>